@model UserManagementApp.Models.CreateUser

@{
    ViewData["Title"] = "Agregar Usuario";
}

<h1 class="text-center my-4">Agregar Usuario</h1>

<div class="d-flex justify-content-center">
    <div class="card col-md-8 col-lg-6 shadow-sm">
        <div class="card-header bg-dark text-white">
            <h4 class="mb-0">Informaci√≥n del Usuario</h4>
        </div>
        <div class="card-body">
            <form asp-action="Create" method="post" novalidate>
                <div class="form-group mb-3">
                    <label asp-for="Name" class="control-label">Username</label>
                    <input asp-for="Name" class="form-control" placeholder="Ingrese el nombre del usuario"/>
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group mb-3">
                    <label asp-for="Job" class="control-label">Ocupacion</label>
                    <input asp-for="Job" class="form-control" placeholder="Ingrese el cargo del usuario"/>
                    <span asp-validation-for="Job" class="text-danger"></span>
                </div>
                <div class="d-grid gap-2">
                    <button type="submit" class="btn btn-success btn-block">Agregar</button>
                    <a asp-action="Create" class="btn btn-outline-secondary btn-block">Cancelar</a>
                </div>
            </form>
        </div>
    </div> 
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
